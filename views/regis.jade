div.title
      h1 #{title}
      div.signup-form
        div.input-area
          div
            span.subtitle 邮箱地址:
            input.signup-textbox(type="text", name="username")
          div
            span.subtitle 输入密码:
            input.signup-textbox(type="password", name="password")
           div
            span.subtitle 确认密码:
            input.signup-textbox(type="password", name="re-password")

        div.signup-buttons
           input#register-button(type="button", name="login-button", value="登录")

